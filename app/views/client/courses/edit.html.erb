
<h1>Edit Course</h1>
<%= form_tag "/client/courses/#{@course['id']}", method: :patch do %>
  
    <div>
      Name:<input class="form-item" type="text" name="input_name" id="input_name" value="<%= @course['name'] %>">
    </div>
    <div>
      Description:<input class="form-item" type="textbox" name="input_description" id="input_description" value="<%= @course['description'] %>">
    </div>

  <div>
    <input type="submit" name="submit" value="Save">
  </div>
<% end %>

<%= form_tag "/client/courses/#{@course['id']}", method: :delete do %>
  <div class="center">
    <input type="submit" name="submit" value="Delete">
  </div>
<% end %>
