<!DOCTYPE html>
<html>
  <head>
    <title>DlbClient</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <h1>WELCOME TO THE DIGITAL LAB NOTEBOOK OF THE FUTURE</h1>
    <% flash.each do |key, message| %>
      <p><%= message %><p>
    <% end %>
    <h2>Teachers</h2>
    <a href="/client/teachers/signup">Teacher Sign Up</a>
    <h2>Students</h2>
    <a href="/client/students/signup">Student Sign Up</a>
    <%= yield %>
  </body>
</html>
